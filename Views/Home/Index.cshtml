@{
    ViewData["Title"] = "Home Page";
}

<div class="top_bar">
    <h1>Register to this cool site!</h1>
    <a class="button" href="/LoginPage">Login</a>
</div>

@model User
    <form asp-action="Register" asp-controller="Home" method="post">

        <div class="column">
            <div class="form_item">
                <span asp-validation-for="FirstName"></span>
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName">
            </div>
            <div class="form_item">
                <span asp-validation-for="LastName"></span>
                <label asp-for="LastName"></label>
                <input asp-for="LastName">
            </div>
            <div class="form_item">
                <span asp-validation-for="Email"></span>
                <label asp-for="Email"></label>
                <input asp-for="Email">
            </div>
        </div>
        <div class="column">
            <div class="form_item">
                <span asp-validation-for="Password"></span>
                <label asp-for="Password"></label>
                <input asp-for="Password">
            </div>
            <div class="form_item">
                <span asp-validation-for="Confirmation"></span>
                <label asp-for="Confirmation"></label>
                <input asp-for="Confirmation">
            </div>
            <input value="Register" type="submit"> 
        </div>

            
    </form>
